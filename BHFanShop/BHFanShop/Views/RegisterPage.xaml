<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BHFanShop.Views.RegisterPage"
             >
    <VerticalStackLayout Spacing="15" Padding="30" VerticalOptions="Center">
        <Image Source="logo.png" HeightRequest="120" Margin="0,0,0,20"/>
        
        <Label Text="Registracija" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="Korisničko ime" />
        <Entry x:Name="PasswordEntry" Placeholder="Lozinka" IsPassword="True" />

        <Button Text="REGISTRUJ ME"
                BackgroundColor="#002395"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnRegisterClicked" />

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <Label Text="Već imaš nalog?" VerticalOptions="Center" />
            <Button Text="Prijavi se"
            TextColor="#002395"
            BackgroundColor="Transparent"
            Padding="0"
            Clicked="OnGoToLoginClicked" />
        </HorizontalStackLayout>


    </VerticalStackLayout>
</ContentPage>