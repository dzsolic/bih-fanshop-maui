<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BHFanShop.Views.FirstPage">
    <Grid RowDefinitions="1*, 1.2*, 2*" Padding="20">
        <Image Source="stadion.jpg" 
           Aspect="AspectFill" Opacity="1" 
           Grid.RowSpan="3" HorizontalOptions="Fill" 
           VerticalOptions="Fill"
           Margin="-20" />
        
        <Image Grid.Row="0" Source="logosaveza2.png" 
                   Aspect="AspectFill" WidthRequest="150" HeightRequest="150">
            <Image.Shadow>
                <Shadow Brush="Gold" Offset="0,0" Radius="40" Opacity="0.5" />
            </Image.Shadow>
        </Image>

        <Border Grid.Row="1" 
        StrokeShape="RoundRectangle 20" 
        BackgroundColor="#0046b8" 
        Margin="0,20" 
        Padding="20"
        StrokeThickness="2" 
        Stroke="#031837"
        HeightRequest="180">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="8,8" Radius="15" Opacity="0.5" />
            </Border.Shadow>

            <Grid RowDefinitions="Auto, Auto, *">

                <VerticalStackLayout Grid.Row="0" Spacing="1" Padding="0,0,0,20">
                    <Label Text="ZVANIČNA ČLANSKA KARTICA"
                   TextColor="Gold" 
                   FontSize="11" 
                   FontAttributes="Bold" 
                   CharacterSpacing="1"/>
                    <Label Text="KORISNIČKO IME NAVIJAČA:" 
                   TextColor="LightGray" 
                   FontSize="10" 
                   FontAttributes="Bold" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" VerticalOptions="Center">
                    <Label x:Name="UserNameLabel" 
                   Text="Nema" 
                   TextColor="White" 
                   FontSize="25" 
                   FontAttributes="Bold" 
                   CharacterSpacing="1"/>
                </VerticalStackLayout>

                <Grid Grid.Row="2" ColumnDefinitions="*, *, *" Margin="0,15,0,0">

                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="UTAKMICE" TextColor="Gold" FontSize="10" FontAttributes="Bold" />
                        <Label x:Name="TicketLabel" Text="0" TextColor="White" FontSize="18" FontAttributes="Bold" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="DRESOVI" TextColor="Gold" FontSize="10" FontAttributes="Bold" />
                        <Label x:Name="JerseyLabel" Text="0" TextColor="White" FontSize="18" FontAttributes="Bold" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="End">
                        <Label Text="STATUS" TextColor="Gold" FontSize="10" FontAttributes="Bold" />
                        <Label x:Name="StatusLabel" Text="NAVIJAČ" TextColor="White" FontSize="18" />
                    </VerticalStackLayout>

                </Grid>
            </Grid>
        </Border>


        <Border Grid.Row="2" 
                BackgroundColor="#0046b8" 
                Stroke="#031837"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 25"
                Padding="20, 10, 20, 15" 
                Margin="0,5,0,0">   

            <Border.Shadow>
                <Shadow Brush="Black" Offset="5,5" Radius="15" Opacity="0.4" />
            </Border.Shadow>

            <VerticalStackLayout Spacing="10" VerticalOptions="Fill">

                <VerticalStackLayout Spacing="10" Margin="0,10,0,5">
                    <Label Text="DOBRODOŠLI U DRŽAVNI TIM" 
                               TextColor="Gold" 
                               FontSize="12" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center" 
                               CharacterSpacing="3"/>
                    <Label Text="Oficijalna Aplikacija FS BiH" 
                           TextColor="White" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />    
                </VerticalStackLayout>

                <BoxView HeightRequest="2" Color="Gold" Opacity="0.4" Margin="10,0" />

                <Grid ColumnDefinitions="*, *" 
                      RowDefinitions="Auto, Auto" 
                      ColumnSpacing="15" 
                      RowSpacing="20"
                      Margin="0,10">

                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                        <Label Text="FAN SHOP" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                        <Label Text="Kupi novi dres" TextColor="LightGray" FontSize="13" HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="ULAZNICE" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                        <Label Text="Osiguraj kartu" TextColor="LightGray" FontSize="13" HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="1" Grid.Column="0" HorizontalOptions="Center">
                        <Label Text="SELEKCIJE" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                        <Label Text="Prati sve timove" TextColor="LightGray" FontSize="13" HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="RASPORED" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                        <Label Text="Tabela i utakmice" TextColor="LightGray" FontSize="13" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Grid>

                <Label Text="Prati, kupuj i navijaj za Bosnu i Hercegovinu!" 
                           TextColor="White" 
                           FontSize="20" 
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center" 
                           Opacity="0.9"
                           Margin="0,5,0,0" />  

            </VerticalStackLayout>
        </Border>

    </Grid>
</ContentPage>