<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BHFanShop.Views.Selections"
             Title="Selekcije">

    <Grid>
        <Image Source="stadion.jpg" Aspect="AspectFill" />

        <ScrollView>
            <VerticalStackLayout Padding="25" Spacing="18">

                <VerticalStackLayout Spacing="5" Margin="0,20,0,10" HorizontalOptions="Center">
                    <Label Text="NAŠE SELEKCIJE" 
                           TextColor="White" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center">
                        <Label.Shadow>
                            <Shadow Brush="Black" Offset="2,2" Radius="5" Opacity="0.8" />
                        </Label.Shadow>
                    </Label>
                    <BoxView HeightRequest="2" WidthRequest="60" Color="Gold" HorizontalOptions="Center" />
                    <Label Text="Prati put naših zmajeva" 
                           TextColor="LightGray" 
                           FontSize="14" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>

                <Border Stroke="Gold"
                        StrokeThickness="2"
                        BackgroundColor="Gold"
                        StrokeShape="RoundRectangle 20"
                        HeightRequest="100">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAClicked" />
                    </Border.GestureRecognizers>
                    <Grid ColumnDefinitions="80, *">
                        <Image Source="logosaveza2.png" Margin="15" Grid.Column="0" />
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="A SELEKCIJA" TextColor="Black" FontSize="20" FontAttributes="Bold" />
                            <Label Text="Seniori - Prvi tim" TextColor="#333" FontSize="12" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <Label Text="MLADE SELEKCIJE" TextColor="White" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0" />

                <Border Stroke="#0046b8" BackgroundColor="#CC0046b8" StrokeShape="RoundRectangle 15" HeightRequest="70">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnU21Clicked" />
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="20" Padding="20,0">
                        <Label Text="U21" TextColor="Gold" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" />
                        <Label Text="Mlada reprezentacija" TextColor="White" VerticalOptions="Center" FontSize="16" />
                    </HorizontalStackLayout>
                </Border>

                <Border Stroke="#0046b8" BackgroundColor="#CC0046b8" StrokeShape="RoundRectangle 15" HeightRequest="70">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnU19Clicked" />
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="20" Padding="20,0">
                        <Label Text="U19" TextColor="Gold" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" />
                        <Label Text="Juniori" TextColor="White" VerticalOptions="Center" FontSize="16" />
                    </HorizontalStackLayout>
                </Border>

                <Border Stroke="#0046b8"
                        BackgroundColor="#CC0046b8"
                        StrokeShape="RoundRectangle 15"
                        HeightRequest="70">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnU17Clicked" />
                    </Border.GestureRecognizers>

                    <HorizontalStackLayout Spacing="20" Padding="20,0">
                        <Label Text="U17" TextColor="Gold" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" />

                        <Label Text="Kadeti"
                               TextColor="White"
                               FontSize="16"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Border>


                <Label Text="ŽENSKI FUDBAL" TextColor="White" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0" />

                <Border Stroke="#0046b8" BackgroundColor="#CC0046b8" StrokeShape="RoundRectangle 15" HeightRequest="70">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnWomanClicked" />
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="20" Padding="20,0">
                        <Label Text="ŽNS" TextColor="Gold" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" />
                        <Label Text="Ženska selekcija" TextColor="White" VerticalOptions="Center" FontSize="16" />
                    </HorizontalStackLayout>
                </Border>
                
                <VerticalStackLayout Spacing="15" Margin="0,50,0,20">

                    <Grid ColumnDefinitions="*, Auto, *">
                        <BoxView Grid.Column="0" HeightRequest="1" Color="White" Opacity="0.3" VerticalOptions="Center" Margin="0,0,10,0" />
                        <Label Grid.Column="1" Text="SPONZORI" TextColor="Gold" FontSize="12" FontAttributes="Bold" CharacterSpacing="2" />
                        <BoxView Grid.Column="2" HeightRequest="1" Color="White" Opacity="0.3" VerticalOptions="Center" Margin="10,0,0,0" />
                    </Grid>

                    <FlexLayout Wrap="Wrap" JustifyContent="Center" AlignItems="Center">
                        <Image Source="raifassen.png" HeightRequest="40" Margin="10" Opacity="0.8" />
                        <Image Source="kelme.png" HeightRequest="35" Margin="10" Opacity="0.8" />
                        <Image Source="bhtelecom.png" HeightRequest="40" Margin="10" Opacity="0.8" />
                    </FlexLayout>

                    <Label Text="© 2026 N/FS BIH" 
                           TextColor="White" 
                           Opacity="0.5" 
                           FontSize="10" 
                           HorizontalOptions="Center" 
                           Margin="0,20,0,0" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>