<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BHFanShop.Views.LoginPage"
             >
    <VerticalStackLayout Spacing="15" Padding="30" VerticalOptions="Center">

        <Image Source="logo.png" HeightRequest="120" Margin="0,0,0,20"/>

        <Entry x:Name="UsernameEntry"  Placeholder="Korisničko ime"/>
        <Entry x:Name="PasswordEntry" Placeholder="Lozinka" IsPassword="True" />

        <Button Text="PRIJAVI SE" 
                BackgroundColor="#002395" TextColor="White"
                HeightRequest="50" Clicked="OnLoginClicked" />
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <Label Text="Nemaš nalog?" VerticalOptions="Center" />
            <Button Text="Registruj se" 
                    TextColor="#002395" BackgroundColor="Transparent" 
                    Padding="0"
                    Clicked="OnGoToRegisterClicked" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>