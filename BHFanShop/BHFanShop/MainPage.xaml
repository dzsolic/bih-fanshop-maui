             x:Class="BHFanShop.MainPage">

    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
        <Image Source="logo.png" HeightRequest="150" Margin="0,0,0,20"/>

        <Button Text="PRIJAVA" 
